<div class="row">

  <div class="col-md-5 post">
    <h2> Sign In </h2>
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :username, "Username" %>
        <%= text_field_tag :username, nil, class: "form-control", placeholder: "Username" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
      </div>

      <div class="row" class="text-center">
        <div class="col-xs-12">
          <%= submit_tag "Sign In", class: "btn btn-block btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-5 col-md-offset-2 post">
    <h2> Sign Up </h2>
    <%= form_for @author do |f| %>
      <div class="form-group">
        <%= field_with_errors(@author, :username) %>
        <%= f.label :username, "Username (Min 6 chars, letters/underscores only)" %>
        <%= f.text_field :username, {required: true, placeholder: "Username", class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= field_with_errors(@author, :password) %>
        <%= f.label :password, "Password (Min 8 chars)" %>
        <%= f.password_field :password, {required: true, placeholder: "Password", class: "form-control" } %>
      </div>

      <div class="form-group">
        <%= field_with_errors(@author, :password_confirmation) %>
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, {required: true, placeholder: "Password", class: "form-control" } %>
      </div>

      <div class="row" class="text-center">
        <div class="col-xs-12">
          <%= f.submit "Sign Up", class: "btn btn-block btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
