<div class="row" data-id=<%=post.id%>>
  <div class="post col-md-10 col-md-offset-1">
    <div>
      <h2><%= link_to post.title, post_path(post) %></h2>
      <h6><%= post.publish_date %> | <%= author_link(post) %> | <%= tag_link(post) %></h6>
    </div>
    <div><%= post.body %></div>
    
    <div class="row">
      <div class="col-xs-10 pull-right text-right">
        <%= edit_button(current_user, post) %>
        <%= delete_button(current_user, post) %>
        <%= raw_link(post) %>
      </div>
      <div class="col-xs-2 pull-left">
        <%= like_button(post) %>
      </div>
    </div>
  </div>
</div>
