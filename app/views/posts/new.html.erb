<div class="row">
  <div class="col-md-10 col-md-offset-1 post">
    <h1> Create a Post </h1>
    <%= form_for @post, class: "post" do |f| %>
      <div class="form-group">
        <%= field_with_errors(@post, :title) %>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <%= field_with_errors(@post, :body) %>
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>

      <div class="form-group">
        <%= f.label :tag %>
        <%= f.text_field :tag %>
      </div>
      <%= f.submit "Save Post", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
